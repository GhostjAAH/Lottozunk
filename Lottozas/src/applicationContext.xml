<?xml version="1.0" encoding="UTF-8"?>
<beans 
	xmlns="http://www.springframework.org/schema/beans"
  	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  	xmlns:p="http://www.springframework.org/schema/p"
  	xsi:schemaLocation="http://www.springframework.org/schema/beans
    	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
  
<bean id="huzasBean" class="pallas.lotto.Lottohuzas">
	<property name ="MaxElem" value="100"/>
</bean>  

<bean id="szamokBean" class="pallas.lotto.Gyakoriszamok">
<constructor-arg ref="huzasBean"/>
</bean>

<bean id="kiirBean" class="pallas.lotto.Szamkiiras">
<constructor-arg ref="szamokBean"/>
</bean>

</beans>